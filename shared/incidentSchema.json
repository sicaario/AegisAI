{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "AegisAI Incident Schema",
    "description": "Schema for incident data shared between frontend and backend",
    "type": "object",
    "required": [
        "id",
        "prompt",
        "severity",
        "timestamp",
        "matchedPatterns"
    ],
    "properties": {
        "id": {
            "type": "string",
            "description": "Unique incident identifier"
        },
        "datadogId": {
            "type": "string",
            "description": "Datadog incident ID (if created)"
        },
        "datadogUrl": {
            "type": "string",
            "format": "uri",
            "description": "URL to Datadog incident page"
        },
        "prompt": {
            "type": "string",
            "description": "The original malicious prompt"
        },
        "response": {
            "type": "string",
            "description": "The AI response (if generated)"
        },
        "severity": {
            "type": "string",
            "enum": [
                "SEV-1",
                "SEV-2",
                "SEV-3"
            ],
            "description": "Incident severity level"
        },
        "matchedPatterns": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "List of malicious patterns detected"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "When the incident occurred"
        },
        "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Detection confidence score"
        },
        "autopsy": {
            "type": "object",
            "properties": {
                "report": {
                    "type": "string",
                    "description": "AI-generated autopsy report"
                },
                "generatedAt": {
                    "type": "string",
                    "format": "date-time"
                }
            }
        },
        "fix": {
            "type": "object",
            "properties": {
                "fixedPrompt": {
                    "type": "string",
                    "description": "Safe version of the prompt"
                },
                "explanation": {
                    "type": "string",
                    "description": "Why the fix works"
                },
                "generatedAt": {
                    "type": "string",
                    "format": "date-time"
                }
            }
        },
        "executiveSummary": {
            "type": "object",
            "properties": {
                "summary": {
                    "type": "string",
                    "description": "Non-technical summary for executives"
                },
                "generatedAt": {
                    "type": "string",
                    "format": "date-time"
                }
            }
        }
    }
}